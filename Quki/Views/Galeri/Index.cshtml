@using Quki.Entity.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core

@model List<Products>



@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="portfolio" class="portfolio portfolio-gallery portfolio-5col pt-80 bg-white">
    <div class="container-fluid pr-0 pl-0">
        <div class="row">
            <!-- Portfolio Filter
            ============================================= -->
            <div class="col-xs-12 col-sm-12 col-md-12 portfolio-filter">
                <ul class="list-inline mb-0">

                    <li>
                        <a href="#" data-filter=".filter-images">
                            @MultiLanguageOmni.ReadResourceKey.GetString("Images", "MultiLanguageOmni.Index")
                        </a>
                    </li>
                    <li>
                        <a href="#" data-filter=".filter-videos">
                            @MultiLanguageOmni.ReadResourceKey.GetString("Videos", "MultiLanguageOmni.Index")
                        </a>
                    </li>
                    <li>
                        <a class="active-filter" href="#" data-filter="*">
                            @MultiLanguageOmni.ReadResourceKey.GetString("All", "MultiLanguageOmni.Index")
                        </a>
                    </li>
                </ul>
            </div>
            <!-- .Portfolio-filter end -->
        </div>
        <div id="portfolio-all" class="row-no-padding" style="position: relative; height: 796.2px;">
            @foreach (var Item in Model)
            {
                @if (Item.ProductTypeSeqID == 0)
                {

                    <!-- Portfolio #1 -->
                    <div class="col-xs-12 col-sm-6 col-md-3 portfolio-item filter-images " style="position: absolute; left: 0px; top: 0px;">
                        <div class="portfolio--img">
                            <img src="@Item.ImagePath" alt="Dish Image">
                            <div class="portfolio--hover">
                                <div class="portfolio--action">
                                    <div class="pos-vertical-center">
                                        <div class="portfolio--zoom">
                                            <a class="img-gallery-item" href="@Item.ImagePath" title="Dish Image"></a>
                                        </div>
                                    </div>
                                </div>
                                <!-- .Portfolio-action end -->
                            </div>
                            <!-- .Portfolio-hover end -->
                        </div>
                        <!-- .Portfolio-img end -->
                    </div>
                    <!-- . portfolio-item end -->
                }
                else if (Item.ProductTypeSeqID == 1)
                {



                    <div class="col-xs-12 col-sm-6 col-md-3 portfolio-item filter-videos " style="position: absolute; left: 0px; top: 0px;">
                        <div class="portfolio--img">
                            <video width="320" height="240" controls>
                                <source src="@Item.ImagePath" type="video/mp4">
                            </video>
                            <div class="portfolio--hover">
                                <div class="portfolio--action">
                                    <div class="pos-vertical-center">
                                        <div class="portfolio--zoom">
                                            <a class="img-gallery-video" href="@Item.ImagePath" title="Dish Image"></a>
                                        </div>
                                    </div>
                                </div>
                                <!-- .Portfolio-action end -->
                            </div>
                            <!-- .Portfolio-hover end -->
                        </div>
                        <!-- .Portfolio-img end -->
                    </div>
                    <!-- . portfolio-item end -->
                }

            }
        </div>


        <!-- .row end -->
        <!-- .row end -->
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 text--center mt-50">
                <a class="btn btn--secondary btn--bordered btn--rounded" href="#"><span></span>Load More</a>
            </div>
          
        </div>
        
    </div>
   
</section>

