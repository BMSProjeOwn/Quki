@using Microsoft.AspNetCore.Identity
@using Quki.Common
@using Quki.Entity.Models
<!DOCTYPE html>
<html lang="en">
@inject SignInManager<AppUser>  signInManager;
@*@{
    var culture = Context.Features.Get<Microsoft.AspNetCore.Localization.IRequestCultureFeature>();
    MultiLanguageOmni.ReadResourceKey.cultureName = culture.RequestCulture.UICulture.Name;
    

}*@
<head>

    <title>@ViewData["Title"] - TİKUTU</title>

    @{
        string keyw = (!string.IsNullOrEmpty(ViewBag.MetaKeywords) ? ViewBag.MetaKeywords : "");
        string desc = (!string.IsNullOrEmpty(ViewBag.MetaDescription) ? ViewBag.MetaDescription : "");
    }



    <meta property="og:title" content="@ViewData["Title"] Quki">
    <meta content="@ViewData["Title"] Quki" name="twitter:title">
    <meta property="og:description" content="@desc">
    <meta content="Quki" property="og:site_name">
    <meta content="news" property="og:type">
    <meta name="title" content="@ViewData["Title"] Quki" />
    <meta name="twitter:description" content="@desc" />
    <meta name="searchTitle" content="@ViewData["Title"] Quki" />
    <meta name="keywords" content="@keyw">
    <meta name="description" content="@desc" />
    <meta name="image" content="" />
    <meta content="index, follow" id="meta_robot" name="robots">
    <meta name="google-site-verification" content="cGmFm7ge4PXGlUzj3EVux-b-F3wFSHo2OBDIONHFct4" />


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.ico" type="image/png">
    <link rel="canonical" href="@ViewData["canonicalLink"]" />
    <link rel="apple-touch-icon" sizes="60x60" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <!-- Goggle Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Noto+Serif" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display" rel="stylesheet">

    <!-- Libs CSS -->
    <link rel="stylesheet" href="~/web/libs/boostrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/web/libs/flaticon/css/flaticon.css">
    <link rel="stylesheet" href="~/web/libs/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/web/libs/owl.carousel/~/webQuki/owl.carousel.css">
    <link rel="stylesheet" href="~/web/libs/nivo-slider/css/nivo-slider.css">
    <link rel="stylesheet" href="~/web/libs/nivo-slider/css/animate.css">
    <link rel="stylesheet" href="~/web/libs/nivo-slider/css/style.css">
    <link rel="stylesheet" href="~/web/libs/slider-range/css/jslider.css">
    <link rel="stylesheet" href="~/web/libs/font-cs/cs.css">


    <!-- Template CSS -->
    <link rel="stylesheet" type="text/css" href="~/web/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/web/css/responsive.css">
    <link href="~/web/css/Custom.css" rel="stylesheet" />


<script type="application/ld+json">
{
  "@@context": "https://schema.org",
  "@@type": "Organization",
  "name": "Quki",
  "url": "https://Quki.com/",
  "logo": "https://Quki.com/web/img/Quki_logo.png",
  "sameAs": [
    "https://www.facebook.com/Qukicom",
    "https://twitter.com/Qukicom",
    "https://www.instagram.com/Qukicom/",
    "https://www.youtube.com/channel/UCQ1ErM-53hECcgHd6U-tGCw",
    "https://tr.pinterest.com/Qukicom/"
  ]
}
</script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
