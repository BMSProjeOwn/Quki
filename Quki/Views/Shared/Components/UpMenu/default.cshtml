@using Quki.Entity.Models
@model List<Menu>


<nav id="primary-menu" class="navbar navbar-fixed-top">
    <div class="container">
        <div class="">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="logo hidden-lg hidden-md" href="index.html">
                    <img class="logo-light" src="~/webQuki/images/logo/logo-light.png" alt="Steakin Logo" draggable="false">
                    <img class="logo-dark" src="~/webQuki/images/logo/logo-dark.png" alt="Steakin Logo" draggable="false">
                </a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <!-- Home Menu -->
                    @if (Model != null && Model.Count > 0)
                    {

                        foreach (var item in Model)
                        {
                            <li class="has-dropdown">
                                <a asp-action="@item.action" asp-controller="@item.controller" class="dropdown-toggle  menu-item" data-hover="pages">@item.Name</a>
                               
                            </li>
                        }
                    }

                </ul>
                
                <!-- Module Cart -->
                <!-- .module-cart end -->
                <!-- Module Search -->
                <!-- .module-search end -->
                <!-- Module Side NAV -->

            </div>
            <!-- /.navbar-collapse -->
        </div>
    </div>
    <!-- /.container-fluid -->
</nav>



