@using Quki.Entity.DtoModels;
@model NewsAndAnnouncementModel
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">@Model.Contents</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" style=" padding: 0px 0px 60px 60px;">
                <div class="entry--img">
                    <a href="#" style="text-align:center">
                        <img src="@Model.ImagePath" alt="entry image" />
                    </a>
                </div>
                <div class="entry--bio">
                    @Html.Raw(Model.Remark)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>