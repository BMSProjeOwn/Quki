@using Quki.Models
@*//@model List<GetMenuItems>*@
@{
    ViewData["Title"] = "GetMenuItem";
    Layout = "~/Views/Shared/_LayoutMobil.cshtml";
}



<div class="row" style="margin-top:15%;" >
    <div class="col-1"></div>
    <div class="box3 col-10" onclick="goSluDefController()" style="font-size: 22px; background: #005BC7; font-weight: bold; font-family: arimamadurai">
        <div class="row">
            <div class="padding-text  col-12">@ViewBag.MenuItems</div>
        </div>
    </div>
    <div class="col-1"></div>
</div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@foreach (var item in ViewBag.ProductItems )
{
    <div class="row">
        <div class="col-1"></div>
        <div class="box2 col-10" data-toggle="modal" data-target="#@item.mi_master_def_seq">
            <div class="row">
                <div class="col-6 imagecirculate">
                    <img src="~/icons/@item.mi_icon_path" style="border-radius:10px;" />
                </div>
                <div class="padding-text col-6" style="text-align: center; color: #005BC7; font-weight: bold; font-family: arimamadurai">
                <p class="text-center h5" style="font-size:16px; font-weight:bold" color>@item.mi_master_def_name</p>
                    <p class="text-center text-secondary h6" style="font-size:12px; font-weight:bold; font-family:arimamadurai" color>@item.rvc_mi_third_name</p>
                <p class="text-center text-secondary"> </p>
                <p class="text-center text-secondary"> </p>
                    <p class="text-center text-secondary h6" style="font-size:16px; font-weight:bold; font-family:arimamadurai" color>@item.mi_price TL</p>
                </div>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
}
@foreach (var item in ViewBag.ProductItems)
{

    <div class="modal fade" id="@item.mi_master_def_seq" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="margin-top: 63%; margin-left: 4%; margin-right: 5%;">
            <div class="modal-content" style="height: 446px; border-radius: 50px; border-width: 5px; text-align:center; border-color: #D88825;">

                <div class="modal-body gallery-item">
                    <div class="imagecirculate3"> <img loading="lazy" data-src="/icons/@item.mi_icon_path" /> </div>
                    <p class="text-center h5" style="font-size:18px; font-weight:bold" color>@item.mi_master_def_name</p>
                    <p class="text-center text-secondary h6" style="font-size:12px" color>@item.rvc_mi_third_name</p>
                    <p class="text-center text-secondary"> </p>
                    <p class="text-center text-secondary"> </p>
                    <p class="text-center text-secondary h6" style="font-size:15px" color>@item.mi_price TL</p>
                </div>
                <div class="modal-footer" style="justify-content: center; border: 0px;">
                    <button type="button" class="btn btn-secondary" style=" background-color: #D88825; border: 0px; width: 100px; height: 35px;" data-dismiss="modal">Kapat</button>
                </div>
            </div>
        </div>
    </div>
}
