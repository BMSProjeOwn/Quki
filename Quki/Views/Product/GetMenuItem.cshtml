@using Quki.Models
@*//@model List<GetMenuItems>*@
@{
    ViewData["Title"] = "GetMenuItem";
    Layout = "~/Views/Shared/_LayoutMobil.cshtml";
}

<div class="row margin-top-menu">
    <div class="col-3"></div>
    <div class="col-6 h-25 d-inline-block" align="center" valign="center" onclick="goToIndex()">
        <img src="~/viewimage/chocolate logo.png" width="100"
height="100" />
    </div>
    <div class="col-3"></div>
</div>



<div class="row ">
    <div class="col-1"></div>
    <div class="box3 col-10 background="#F9FAFA" onclick="goSluDefController()" style="font-size:18px font-weight:bold">
        <div class="row">
            <div class="margin-left col-3"><img src="@ViewBag.Pic" width="60" height="60" /> </div>
            <div class="padding-text  col-9" style=" font-size:27px; font-weight:bold"> @ViewBag.MenuItems</div>
        </div>
    </div>
    <div class="col-1"></div>
</div>

@foreach (var item in ViewBag.ProductItems )
{
    <div class="row margin-top-menu">
        <div class="col-1"></div>
        <div class="box2 col-10">
            <p class="text-center h5" style="font-size:27px; font-weight:bold" color>@item.mi_master_def_name</p>
            <p class="text-center text-secondary h6" style="font-size:12px" color>@item.rvc_mi_third_name</p>
            <p class="text-center text-secondary" > </p>
            <p class="text-center text-secondary" > </p>
            <p class="text-center text-secondary h6" style="font-size:15px" color>@item.mi_price TL</p>
        </div>
        <div class="col-1"></div>
    </div>
}


