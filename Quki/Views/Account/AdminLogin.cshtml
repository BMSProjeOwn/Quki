@using Quki.Entity.ViewModel
@model LoginViewModel


<script src="~/twitter-bootstrap/js/bootstrap.js"></script>
<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<form asp-action="AdminLogin" method="post" class="p-4 w-50 mx-auto">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">

        <label class="form-check-label">Email :</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input type="email" asp-for="Email" class="form-control" />

    </div>
    <div class="form-group">

        <label class="form-check-label">Şifre :</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" asp-for="Password" class="form-control" />

    </div>

    <div class="form-group">
        <input type="checkbox" asp-for="RemmemberMe" class="form-check-input" />
        <label asp-for="RemmemberMe" class="form-check-label">Beni Hatırla</label>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info">Giriş Yap </button>
    </div>
    <div class="form-group">
        <button type="button" asp-action="Index" asp-controller="Home" class="btn btn-block btn-info">Vazgeç</button>
    </div>
</form>
@section JavaScript{

    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}