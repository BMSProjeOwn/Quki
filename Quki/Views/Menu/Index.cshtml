@using Quki.Entity.ViewModel;
@{
    ViewData["Title"] = "Menü";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MenuViewModel
<!-- Heading #1

============================================= -->
<section id="page-title" class="page-title bg-overlay bg-parallax bg-overlay-gradient">
    <div class="bg-section">
        <img src="~/webQuki/images/page-title/10.jpg" alt="Background" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <div class="title title-1 text-center">
                    <div class="title--content">
                        <div class="title--subtitle">@MultiLanguageOmni.ReadResourceKey.GetString("StayUpdated", "MultiLanguageOmni.Index")</div>
                        <div class="title--heading">
                            <h1>@MultiLanguageOmni.ReadResourceKey.GetString("Ourevents", "MultiLanguageOmni.Index")</h1>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="divider--shape-1down"></div>
                </div>
                <!-- .title end -->
            </div>
            <!-- .col-md-12 end -->
        </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>
<section id="heading1" class="heading heading-1">
    <div class="container">
        <div class="row clearfix">
            <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
                <div class="text--center">
                    <p class="heading--subtitle">Start Eating Better</p>
                    <h2 class="heading--title mb-0">Daily New Fresh Meals</h2>
                    <div class="divider--shape-4"></div>
                    <p class="heading--desc">Steak In has the perfect place to enjoy fine food and great cocktails with excellent service, in comfortable atmospheric surroundings. We have a soft dining room, combined with an open kitchen, coffee take out bar and alovely awesome on site coffee roastery.</p>
                </div>
            </div>
            <!-- .col-md-8 end -->
        </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>
<!-- #heading1 end -->
<!-- Divider #1
============================================= -->

<!-- #divider1 end -->
<!-- Menu #classic
============================================= -->


    @foreach (var item2 in Model.sluDefModels)
    {

        var menuList = Model.getMenuItems.Where(x => x.slu_def_seq_view == item2.slu_def_seq).ToList();
        <section id="divider1" class="section-divider3 bg-overlay bg-parallax bg-overlay-dark4">
        <div class="bg-section">
            <img src="@item2.slu_type_slu_image" alt="Background" />
            
        </div>
        <div class="container">
            <div class="divider--shape-1up"></div>
            <div class="row clearfix">
                <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-2">
                    <div class="heading heading-3 text--center">
                        <h2 class="heading--title mb-0 text-white">@item2.slu_def_name</h2>
                    </div>
                </div>
                <!-- .col-md-8 end -->
            </div>
            <!-- .row end -->
            <div class="divider--shape-4down"></div>
        </div>
        <!-- .container end -->
    </section>  
    <section id="menu1" class="menu menu-classic">
    <div class="container">
        <div class="row">


                <div class="col-xs-12 col-sm-12 col-md-4">


                    @{
                        double result = (double)menuList.Count / 3;
                        var count = Math.Ceiling(result);
                                
                    }
                    @for (int i = 0; i < count; i++)
                        {

                                <div class="dish-panel">
                            <h3 class="dish--title">@menuList[i].mi_master_def_name</h3>
                            <div class="dish--price">@menuList[i].mi_price</div>
                            <p class="dish--desc">@menuList[i].rvc_mi_third_name</p>
                                </div>
                
                    }
                </div>
                <div class="col-xs-12 col-sm-12 col-md-4">
                    
                @for (int i = (int)count ; i < (int)count*2; i++)
                {
                    

                        <div class="dish-panel">
                            <h3 class="dish--title">@menuList[i].mi_master_def_name</h3>
                            <div class="dish--price">@menuList[i].mi_price</div>
                            <p class="dish--desc">@menuList[i].rvc_mi_third_name</p>
                        </div>
                    
                }
                    </div>
                    
                    <div class="col-xs-12 col-sm-12 col-md-4">
                        
                @for (int i = (int)count*2; i < menuList.Count(); i++)
                {

                        <div class="dish-panel">
                            <h3 class="dish--title">@menuList[i].mi_master_def_name</h3>
                            <div class="dish--price">@menuList[i].mi_price</div>
                            <p class="dish--desc">@menuList[i].rvc_mi_third_name</p>
                        </div>
                   
                    }
                </div>
                    </div>
        <!-- .row end -->
    </div>
    <!-- .container end -->
</section>
    }


