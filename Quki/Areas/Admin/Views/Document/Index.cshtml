@using Quki.Entity.Models
@model List<Menu>
    <div class="col-12">
        <div class="card  card-secondary">
            <div class="card-header">
                <h3 class="card-title">Döküman Sayfası</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table id="datatable" class="table table-striped table-bordered" width="100%">
                    <thead>
                        <tr>
                            <th>Adı</th>
                            <th>Pozisyon</th>
                            <th>Guncelle</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var Item in Model)
                        {
                            <tr>
                                <td>@Item.Name</td>
                                @if (@Item.PositionID == 1)
                                {
                                    <td>Genel Döküman </td>
                                }
                                else
                                {
                                    <td>Web Ön Taraf Döküman </td>
                                }

                                @*<td>@Item.DisplayOrderNumber</td>*@

                                <td> <a asp-action="Update" asp-controller="Document" asp-area="Admin" asp-route-id="@Item.MenuID" class="btn btn-info"> Güncelle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>


            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </div>



    @section head{
        <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
    }
    @section scripts{
        <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    }

    @section scriptsready {
        var datatableInstance = $('#datatable').DataTable();
    }
