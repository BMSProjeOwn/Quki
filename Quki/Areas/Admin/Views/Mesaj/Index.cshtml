@using Quki.Entity.Models
@using X.PagedList;
@using X.PagedList.Mvc.Core

@model List<VisitorComment>

<div class="col-12">
    <div class="card  card-secondary">
        <div class="card-header" style="height:65px">
            <h3 class="card-title" style="color:white">Ürün Tanımlama</h3>

            
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table id="datatable" class="table table-striped table-bordered" width="100%">
                <thead>
                    <tr>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Yorumu</th>
                        <th>Durumu</th>
                        <th>Yayınla</th>
                        <th>Yayından Kaldır</th>
                        <th>Görüntüle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var Item in Model)
                    {
                        <tr>
                            <td>@Item.Name</td>
                            <td>@Item.Surname</td>                       
                            <td>@Item.Comment</td>
                            <td>@Item.ShowOnHomePage</td>

                            <td> <a asp-action="Publish" asp-controller="Mesaj" onclick="return confirm('Yayınlamak istediğinzden emin misiniz?')" asp-area="Admin" asp-route-id="@Item.VisitorCommentsSeqId " class="btn btn-success"> Yayınla</a></td>
                            <td> <a asp-action="NotPublish" asp-controller="Mesaj" onclick="return confirm('Yayınlamak istediğinzden emin misiniz?')" asp-area="Admin" asp-route-id="@Item.VisitorCommentsSeqId " class="btn btn-danger"> Yayından Kaldır </a></td>
                            <td> <a asp-action="ShowComment" asp-controller="Mesaj" asp-area="Admin" asp-route-id="@Item.VisitorCommentsSeqId" class="btn btn-info"> Görüntüle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>






        <div class="card-footer">
            <ul class="pagination pagination-sm m-0 float-right">
                @if (Model.Any())
                {
                    // @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
                }
            </ul>
           
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


@section head{
    <link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
}
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
}

@section scriptsready {
    var datatableInstance = $('#datatable').DataTable();
}
